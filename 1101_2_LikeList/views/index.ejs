<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>Like List</title>
    <link rel="stylesheet" type="text/css" href="css/style.css" />
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">Like List</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>欲しいものリスト</h1>
        <a href="/new" class="new-button">+ 追加する</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span>欲しいもの</span>
        </div>
        <ul class="table-body">
          <% items.forEach((item) => { %>
          <li>
            <div class="item-data">
              <span class="name-column"><%= item.items %></span>
            </div>
            <div class="item-menu">
              <form action="/delete/<%= item.id %>" method="post">
                <input type="submit" value="削除" />
              </form>
              <a href="/edit/<%= item.id %>">編集</a>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>
